{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./lib/**/*.ts"],
  "exclude": ["./dist", "./tests", "./lib/**/*.cy.ts"],
  "compilerOptions": {
      "target": "ES2019", // ES2020 requires Safari 13+
      "module": "ES2020",
      "declaration": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "./dist",
      "strict": true,
      "lib": [
          "es6",
          "dom"
      ]
  }
}